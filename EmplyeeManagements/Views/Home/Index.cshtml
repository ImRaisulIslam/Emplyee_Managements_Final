@{
    ViewData["Title"] = "Home Page";

}

@model IEnumerable<EmployeeModel> ;



<div class="container">
    <div class="row">

        @foreach (var employee in Model)
        {

            var imagePath = "~/images/" + (employee.PhotoPath ?? "CSE_logo.JPG");
            <div class="col-3">
                <div class="card-deck">
                    <div class="card md-3">

                        <div class="card-header">
                            <h3>@employee.Name</h3>

                        </div>
                        <img style="height:200px; width:auto;" src="@imagePath" asp-append-version="true" />


                        <div class="card-footer text-center">
                            <a asp-controller="Home" asp-action="Detail" asp-route-id="@employee.Id"
                               class="btn btn-primary m-1">View</a>
                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@employee.Id"
                               class="btn btn-primary m-1">Edit</a>
                        </div>

                        <a asp-controller="" asp-action="" asp-route-id=""
                           class="btn btn-danger m-1">Delete</a>

                    </div>
                </div>

            </div>

        }


    </div>

</div>




